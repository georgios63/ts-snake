{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "moduleResolution": "node",
    "removeComments": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*"
  ],
}
